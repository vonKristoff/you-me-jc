.user-choices-component
	border-top .125em solid transparent
	padding-top 1em
	margin .5em 0
	position relative
	&:after
		content ''
		position absolute
		height .125em
		width 0
		left 50%
		top 0
		opacity 0
		background-color black
		transition all .3s ease-in
		transition-delay 300ms
	&.has-mounted:after
		left 0
		width 100%
		opacity 1
	.layout--flex
		display flex
		justify-content space-between
		.is-choice
			display flex
			justify-content center
			align-items center
			// color white
			// background-color black
			border .125em solid black
			border-radius 1em
			padding 0 1.25em
			height min-content
			min-height 2em
			max-height 2em
			overflow hidden
			&:hover
				padding 0 1.75em
			+mobile()
				padding 0em 1.25em