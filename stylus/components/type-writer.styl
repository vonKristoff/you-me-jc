.type-writer-component
	position relative
	&:after
		top 0
		position absolute
		width 100%
		height 100%
		content ''
		background linear-gradient(top, 0% white, 25% rgba(0,0,0,0))
	.fields-body
		padding 0 2em
		position relative
		p
			padding .25em .5em
			background-color _sky
			margin-bottom 1em
			border-radius .125em
			width max-content
			max-width 400px
		+mobile()
			padding 0
			p
				width auto
	.fields-feet
		padding 0 2em
		display flex
		overflow hidden
		max-height 1.5em
		.output
			color cornflowerblue
			p
				margin 0 1em
		+mobile()
			padding 0
		&.is-typing
			.typing
				transform translateX(0%)
				opacity 1
	.typing		
		transition all .3s
		transform translateX(-100%)
		opacity 0
		display flex
		width min-content
		position relative
		background #ccc
		border-radius 1em
		padding .5em
		height min-content
		.ball
			border-radius 50%
			width 5px
			height 5px
			margin 0 .125em
			background-color cornflowerblue
			animation-name bubble
			animation-duration 1s
			animation-iteration-count infinite
			&:nth-child(1n)
				animation-delay 0
			&:nth-child(2n)				
				animation-direction alternate				
				animation-delay 0.3s
			&:nth-child(3n)
				animation-delay 0.6s				