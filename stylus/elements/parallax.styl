/**
 * Useage
 * .camera.has-parallax
 *   .viewport-window(optional for 3d Control)
 *     .parallax-layer
 *       .layer--fore
 *       .layer--base
 *       .layer--back
 */

_perspective = 300px
/**
 * scaleFactor
 * Z = Zdistance from base => z < base = background (scroll SLOW) || z > base = foreground (scroll FAST)
 */
scaleFactor(Z)
  p = unit(_perspective, '')
  if Z > 0
    n = (p + Z) / p
    s = 1 - n + 1
  else
    n = Z / p
    s = (n - 1) * -1
  transform translateZ(unit(Z, 'px')) scale(s)

.has-parallax
  height 100vh
  overflow hidden
  overflow-y auto
  perspective 300px
  scroll-behaviour smooth

.viewport-window
  transform-style preserve-3d
  transition transform .4s ease-out
  &.has-debug
    transform translate3d(0, 0, -800px) rotateY(20deg)

.has-parallax
  [class^="parallax-layer"]    
    height 100vh
    position relative        
    transform-style preserve-3d
  [class^="layer"]
    display flex
    align-items center
    justify-content center
    position absolute
    width 100%
    height 100%

// requires z-index settings

.parallax-layer
  &--1
    z-index 4
    background-color purple
  &--2
    z-index 1
  &--3
    background-color purple
    z-index 2


.layer
  // layer override requires !important
  &--base
    transform translateZ(0)    
  &--back
    scaleFactor(-300)
    background-color green
  &--fore
    scaleFactor(170)
    background-color rgba(250,250,50,.125)
