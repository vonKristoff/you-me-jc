/**
 * Syntax
 * .form-fields
 *   .field
 *     label
 *     input
 *     logo
 */
.form-fields
  background #efefef

.field-input
  display flex
  justify-content space-between
  align-items center
  margin .5em 0
  border-left .25em solid black
  background #efefef

.field-input  
  class[^="fa"]
    opacity 0
  &.has-state-ok
    class[^="fa"]
      opacity 1

.field-input
  input, label
    padding 1em
  input
    width 100%
    max-width 20em
    font-size 1em
    border 1px solid black
    border-radius .25em